<div class="container">
  <table class="table">
    <thead>
      <tr>
        <th scope="col">#</th>
        <th scope="col">First Name</th>
        <th scope="col">Last Name</th>
        <th scope="col">Email</th>
        <th scope="col">Class</th>
        <th scope="col">Subject</th>
        <th scope="col">Actions</th>
      </tr>
    </thead>
    <tbody>
      {{#each teacher}}
      <tr>
        <th scope="row">{{formatIndex @index}}</th>
        <td>{{firstName}}</td>
        <td>{{lastName}}</td>
        <td>{{email}}</td>
        <td>{{#if (ifEquality class null)}}NA{{else}}{{class}}{{/if}}</td>
        <td>{{subject}}</td>
        <td>
          <a href="/edit-teacher/{{this.id}}">Edit</a>
          <a href="/delete-teacher/{{this.id}}">Delete</a>
        </td>
      </tr>
      {{/each}}
    </tbody>
  </table>
</div>