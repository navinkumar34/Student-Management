<div class="container">
  <table class="table">
    <thead>
      <tr>
        <th scope="col">#</th>
        <th scope="col">First Name</th>
        <th scope="col">Last Name</th>
        <th scope="col">Class Teacher</th>
        <th scope="col">Actions</th>
      </tr>
    </thead>
    <tbody>
      {{#each students}}
      <tr>
        <th scope="row">{{formatIndex @index}}</th>
        <td>{{firstName}}</td>
        <td>{{lastName}}</td>
        <td>{{returnName teacherId @root.teacher}}</td>
        <td>
          <a href="/edit-student/{{this.id}}">Edit</a>
          <a href="/delete-student/{{this.id}}">Delete</a>
        </td>
      </tr>
      {{/each}}
    </tbody>
  </table>
</div>